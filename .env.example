# Primary API - Google Gemini
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Feature-specific Gemini API keys (optional - will fallback to NEXT_PUBLIC_GEMINI_API_KEY if not set)
NEXT_PUBLIC_GEMINI_API_KEY_SUMMARY=
NEXT_PUBLIC_GEMINI_API_KEY_MINDMAP=
NEXT_PUBLIC_GEMINI_API_KEY_QUIZ=
NEXT_PUBLIC_GEMINI_API_KEY_LESSON=
NEXT_PUBLIC_GEMINI_API_KEY_ACTIVITY=

# Fallback API - OpenRouter (optional - used when Gemini API fails)
NEXT_PUBLIC_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Supabase Configuration (required for authentication)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
